@model Navz.UniversitySystem.Application.Administrators.Queries.GetAdministrator.AdministratorViewModel
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-12 float-right">
        <div class="row">
            @if (Model.EditEnabled)
            {
                <div class="2">
                    <a class="btn btn-block btn-secondary" asp-action="Edit" asp-controller="Administrator" asp-route-ID="@Model.ID">Edit</a>
                </div>
            }

            @if (Model.DeleteEnabled)
            {
                <div class="2">
                    <a class="btn btn-block btn-danger" asp-action="Delete" asp-controller="Administrator" asp-route-ID="@Model.ID">Delete</a>
                </div>
            }
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <h1>@Model.FullName</h1>
        <h3 class="text-muted">@Model.EmailAddress</h3>
    </div>
</div>

