@model IEnumerable<Navz.UniversitySystem.WebUI.Common.CardMenu>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-12">
            <h3>Cards</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card-columns">
                @foreach (var card in Model)
                {
                    <a class="card btn-card" asp-action="@card.Action" asp-controller="@card.Controller">
                        <div class="card-body">
                            <h4 class="card-title">@card.Title</h4>
                            <p class="card-text">@card.Subtitle</p>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
}
