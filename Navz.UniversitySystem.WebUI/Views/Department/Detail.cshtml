@model Navz.UniversitySystem.Application.Departments.Queries.GetDepartment.DepartmentViewModel
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-12 float-right">
        <div class="row">
            @if (Model.EditEnabled)
            {
                <div class="2">
                    <a class="btn btn-block btn-secondary" asp-action="Edit" asp-controller="Department" asp-route-ID="@Model.ID">Edit</a>
                </div>
            }

            @if (Model.DeleteEnabled)
            {
                <div class="2">
                    <a class="btn btn-block btn-danger" asp-action="Delete" asp-controller="Department" asp-route-ID="@Model.ID">Delete</a>
                </div>
            }
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <h1>@Model.Name</h1>
        <h3 class="text-muted">@Model.Description</h3>
    </div>
</div>

